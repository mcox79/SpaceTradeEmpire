# Normalize text files, then pin EOL where it matters
* text=auto

# Godot sources: always LF
*.gd   text eol=lf
*.godot text eol=lf
*.tscn text eol=lf
*.tres text eol=lf
*.cfg  text eol=lf

# Common text formats: LF
*.md   text eol=lf
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.txt text eol=lf


# .NET sources and project files: LF
*.cs     text eol=lf
*.csproj text eol=lf
*.sln    text eol=lf
*.props  text eol=lf
*.targets text eol=lf
# Windows scripts: CRLF
*.ps1  text eol=crlf
*.cmd text eol=crlf
*.bat text eol=crlf
# Scripts: LF
*.py   text eol=lf
*.sh   text eol=lf

# Repo control files: LF
.editorconfig text eol=lf
.gitattributes text eol=lf
.gitignore text eol=lf
